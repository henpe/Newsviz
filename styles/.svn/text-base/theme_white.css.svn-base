body {
	background-color: #ff;
	font-family: "Helvetica Neue", Helvetica, "Lucida Grande", Arial, sans-serif;
	color:#000;
}
a {
	color:#000;
	text-decoration:none;
}

/* Map */
	#dashboard #map {
		border-bottom:1px solid #ccc;
	}

/* Pages */
    
    /* Base */
    
    #pages li.lang-pt-BR,
	#stats li.lang-pt-BR a,
	.wml-info-window-content li.lang-pt-BR {
		background-image:url(../images/marker_pt.png);
		background-repeat:no-repeat;
		background-position:2.5% 2em;
	}
	#pages li.lang-vi,
	#stats li.lang-vi a,
	.wml-info-window-content li.lang-vi {
		background-image:url(../images/marker_vi.png);
		background-repeat:no-repeat;
		background-position:2.5% 2em;
	}
	#pages li.lang-ru,
	#stats li.lang-ru a,
	.wml-info-window-content li.lang-ru {
		background-image:url(../images/marker_ru.png);
		background-repeat:no-repeat;
		background-position:2.5% 2em;
	}
	#pages li.lang-es,
	#stats li.lang-es a,
	.wml-info-window-content li.lang-es {
		background-image:url(../images/marker_es.png);
		background-repeat:no-repeat;
		background-position:2.5% 2em;
	}
	#pages li.lang-fa,
	#stats li.lang-fa a,
	.wml-info-window-content li.lang-fa {
		background-image:url(../images/marker_fa.png);
		background-repeat:no-repeat;
		background-position:2.5% 2em;
	}
	#pages li.lang-ar,
	#stats li.lang-ar a,
	.wml-info-window-content li.lang-ar {
		background-image:url(../images/marker_ar.png);
		background-repeat:no-repeat;
		background-position:2.5% 2em;
	}
	#pages li.lang-hi,
	#stats li.lang-hi a,
	.wml-info-window-content li.lang-hi {
		background-image:url(../images/marker_hi.png);
		background-repeat:no-repeat;
		background-position:2.5% 2em;
	}
	#pages li.lang-tr,
	#stats li.lang-tr a,
	.wml-info-window-content li.lang-tr {
		background-image:url(../images/marker_tr.png);
		background-repeat:no-repeat;
		background-position:2.5% 2em;
	}
	#pages li h2 {
		font-size:1.9em;
		line-height:1.2;
		padding:0;
		opacity:0.8;
		margin:0 0 0.4em 0;
	}
	li h2 a {
		color:#000;
		display:inline;
	}
	li h2 a:hover {
		color:#fff;
	}
	li.lang-pt-BR h2 a:hover {background-color:#3db2d4;}
	li.lang-vi h2 a:hover  {background-color:#efaa03;}
	li.lang-ru h2 a:hover  {background-color:#84d602;}
	li.lang-es h2 a:hover  {background-color:#ce4efd;}
	li.lang-fa h2 a:hover  {background-color:#d3454f;}
	li.lang-ar h2 a:hover  {background-color:#eb62d3;}
	li.lang-hi h2 a:hover  {background-color:#d9d600;}
	li.lang-tr h2 a:hover  {background-color:#5252eb;}
	#pages li p {
		font-size:1.3em;
		font-weight:normal;
		line-height:1.4em;
		padding:0;
		margin:0.2em 0 0 0;
	}
	#pages li .meta {
		margin-top:0.6em;
	}
	#pages li .meta span {
		font-weight:normal;
		font-size:1em;
		color:#63676b;
	}
	#pages li p a {
		color:#444;
		border-bottom:1px dotted #999;
	}
	#pages li p a:hover {
		color:#000;
		border-bottom:1px dotted #000;
	}
	#pages li .site {
		font-weight:normal;
		color:#666;
		margin-top:0.6em;
	}
    
    /* Dashboard */
    
	#dashboard #pages {
		border-left:1px solid #ccc;
	}
	#dashboard #pages #status {
		padding:10px 7% 10px 7%;
		background-color: #eee;
	}
	#dashboard #pages .ui-progressbar {
		height:2px;
	}
	#dashboard #pages .ui-corner-all { -moz-border-radius: 0; -webkit-border-radius: 0; }
	#dashboard #pages .ui-widget-header {
		background:#bbb;
		border:none;
	}
	#dashboard #pages .ui-widget-content {
		background:#900;
		border:none;
	}
	#dashboard #pages li {
		padding:1.3em 7% 1.3em 7%;
		display:none;
	}
    
/* Aggregation pages */
    
    .aggregation h1 {
        border-bottom:1px solid #CCCCCC;
        font-size:3em;
        margin-bottom:0.5em;
        padding-bottom:0.5em;
    }
    .aggregation h1 span {
        color:#777;
    }
    .aggregation #pages li {
        position:relative;
        background:none;
        padding:0 0 1.9em 0;
    }
    .aggregation #pages li div {
        float:left;
        width:40em;
    }
    .aggregation #pages li .translation {
        padding-right:2em;
    }
    .aggregation #pages .original,
    .aggregation #pages .original a {
        color:#666;
    }
    .aggregation #pages .original a:hover {
        color:#fff;
    }
    .aggregation #pages li .site {
        padding-top:0.5em;
		clear:both;
	}
    .aggregation li abbr {
        border:none;
	}

/* Places */
    #places ol h2 {
        font-size:2em;
    }
    #places ol li:first-child h2 a {
        color:#c00;
    }
    #places ol li:first-child h2 a:hover {
        background-color:#c00;
        color:#fff;
    }
    #places ol h2 a:hover {
        background-color:#000;
    }
    #places ol h2 span {
        color:#777;
    }
    #places ol li {
        margin-bottom:1em;
    }


/* People */
	#people {
		background-color:#eee;
	}
	#people ol > li {
		display:block;
		clear:both;
		padding:5px;
	}
	#people h3 {
		font-size:1.4em;
		font-weight: normal;
		margin-bottom:0.6em;
		margin-top:0.2em;
	}
	#people ol li img {
		display:block;
		float:left;
		margin-right:10px;
	}
	#people ul li a {
		font-size: 1.2em;
		line-height:1.4em;
		color:#666;
		border-bottom:1px dotted #999;
	}
	#people ul li a:hover {
		color:#000;
		border-bottom:1px dotted #000;
	}

/* Stats */
	#stats li a {
		font-size:1.2em;
		background-position: left center !important;
		padding-left: 16px;
	}
	#stats li.lang-multi {
		margin-left:-2px;
	}
	#stats li.lang-multi a {
		background-image:url(../images/marker_multi_16x16.png);
		background-repeat:no-repeat;
		background-position:left top !important;
		padding-left: 18px;
		padding-top:1px;
		line-height:1.2em;
	}
	#stats li span {
		font-size:1.1em;
		color:#666;
	}

/* Stats */	
	.wml-info-window-content h2 {
		font-size:1.3em;
		padding-bottom:1em;
	}
	.wml-info-window-content ul {
		max-height:300px;
		overflow:auto;
	}
	.wml-info-window-content li {
		margin-bottom:1em;
		background-position:left 0.15em !important;
		padding-left:16px;
	}
	.wml-info-window-content li h3 {
		font-size:1.3em;
		line-height:1.2em;
		margin-bottom:0.2em;
	}
	.wml-info-window-content li p {
		font-size:1.1em;
		font-weight:normal;
	}